#!/bin/sh

# Set these paths appropriately

BIN=/home/garciaflores/code/java/platanne/code/erwan/tools/TreeTagger/bin
CMD=/home/garciaflores/code/java/platanne/code/erwan/tools/TreeTagger/cmd
LIB=/home/garciaflores/code/java/platanne/code/erwan/tools/TreeTagger/lib

OPTIONS="-token -lemma -sgml"

TOKENIZER=${CMD}/utf8-tokenize.perl
TAGGER=${BIN}/tree-tagger
ABBR_LIST=${LIB}/french-abbreviations-utf8
PARFILE=${LIB}/french-utf8.par

$TOKENIZER -f -a $ABBR_LIST $* |
$TAGGER $OPTIONS $PARFILE
